{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2018"
  },
  "compileOnSave": true,
  "include": [
    "ts",
    "lib/**/*.js",
    "index.js"
  ],
  "exclude": [
    "out/**"
  ],
  "allowJs": "true"
}
