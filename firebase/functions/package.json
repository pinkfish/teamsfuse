{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "pretty": "prettier --write **/*.js **/*.ts",
    "lint": "./node_modules/.bin/eslint --ext .js,.ts .",
    "lintfix": "./node_modules/.bin/eslint --ext .js,.ts --fix .",
    "serve": "firebase serve --only functions",
    "shell": "firebase experimental:functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test-mocha": "cross-env FIREBASE_FIRESTORE_EMULATOR_ADDRESS='127.0.0.1:8080' mocha --reporter spec",
    "build": "./node_modules/.bin/tslint -p tslint.json && ./node_modules/.bin/tsc",
    "eslintcheck": "eslint --print_config index.js | eslint-config-prettier-check",
    "test": "npm run build && firebase emulators:exec --only firestore \"mocha --parallel=false --trace-warnings --unhandled-rejections=strict --reporter spec\""
  },
  "dependencies": {
    "@types/request": "^2.48.5",
    "algoliasearch": "^4.5.1",
    "axios": "^0.20.0",
    "camelcase": "^6.0.0",
    "cors": "^2.8.5",
    "detect-mocha": "^0.1.0",
    "dotenv": "^8.2.0",
    "firebase": "^7.21.1",
    "firebase-admin": "^9.2.0",
    "firebase-functions": "^3.11.0",
    "glob": "^7.1.6",
    "handlebars": "^4.7.6",
    "lodash": "^4.17.20",
    "moment-timezone": "^0.5.31",
    "nodemailer": "^6.4.11",
    "nodemailer-mailgun-transport": "^2.0.0",
    "qs": "^6.9.4",
    "request": "^2.88.2",
    "request-debug": "^0.2.0",
    "request-promise-native": "^1.0.9",
    "ts-process-promises": "^1.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@firebase/testing": "^0.20.11",
    "@types/bluebird": "^3.5.32",
    "@types/lodash": "^4.14.161",
    "@types/nodemailer": "^6.4.0",
    "@types/nodemailer-mailgun-transport": "^1.4.1",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "filesystem": "^1.0.1",
    "firebase-functions-test": "^0.2.2",
    "firestore-security-tests": "^1.4.0",
    "mocha": "^8.1.3",
    "prettier": "^2.1.2",
    "sinon": "^9.0.3",
    "typescript-eslint": "0.0.1-alpha.0"
  },
  "private": true,
  "engines": {
    "node": "10"
  }
}
