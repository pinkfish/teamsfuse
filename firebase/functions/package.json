{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "pretty": "prettier --write **/*.js ts/**/*.ts ts/*/*/*.ts test/**/*.ts test/**/*/*.ts",
    "lint": "./node_modules/.bin/tslint -p tslint.json",
    "lintfix": "./node_modules/.bin/tslint -p tslint.json --fix",
    "copytemplate": "copyfiles --verbose \"templates/**\" lib/ts",
    "serve": "firebase serve --only functions",
    "shell": "firebase experimental:functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test-mocha": "npm run buildnotemplate && cross-env FIREBASE_FIRESTORE_EMULATOR_ADDRESS='127.0.0.1:8080' mocha lib/test/**/*.js --no-opts --config './.mocharc.yml'",
    "build": "npm run copytemplate && npm run buildnotemplate",
    "buildnotemplate": "./node_modules/.bin/tslint -p tslint.json && ./node_modules/.bin/tsc",
    "eslintcheck": "eslint --print-config lib/ts/index.js | eslint-config-prettier-check",
    "test": "npm run build && cross-env FIREBASE_FIRESTORE_EMULATOR_ADDRESS='127.0.0.1:8080' && firebase emulators:exec --only firestore \"mocha lib/test/**/*.js --no-opts --config './.mocharc.yml'\""
  },
  "dependencies": {
    "algoliasearch": "^4.8.3",
    "axios": "^0.21.1",
    "build-url-ts": "^6.0.0",
    "camelcase": "^6.2.0",
    "cors": "^2.8.5",
    "detect-mocha": "^0.1.0",
    "dotenv": "^8.2.0",
    "firebase": "^7.24.0",
    "firebase-admin": "^9.4.1",
    "firebase-functions": "^3.12.0",
    "glob": "^7.1.6",
    "handlebars": "^4.7.6",
    "lodash": "^4.17.20",
    "lodash.set": "^4.3.2",
    "moment-timezone": "^0.5.32",
    "nodemailer": "^6.4.16",
    "nodemailer-mailgun-transport": "^2.0.2",
    "qs": "^6.9.4",
    "ts-process-promises": "^1.0.2",
    "typescript": "^4.1.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^1.1.9",
    "@types/bluebird": "^3.5.33",
    "@types/chai": "^4.2.14",
    "@types/expect": "^24.3.0",
    "@types/glob": "^7.1.3",
    "@types/lodash": "^4.14.165",
    "@types/lodash.set": "^4.3.6",
    "@types/mocha": "^8.0.4",
    "@types/nodemailer": "^6.4.0",
    "@types/nodemailer-mailgun-transport": "^1.4.2",
    "@types/sinon": "^9.0.9",
    "@types/uuid": "^8.3.0",
    "chai": "^4.2.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "filesystem": "^1.0.1",
    "firebase-functions-test": "^0.2.3",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "sinon": "^9.2.1",
    "tslint": "^6.1.3"
  },
  "private": true,
  "engines": {
    "node": "10"
  },
  "main": "lib/ts/index.js",
  "mocha": {
    "recursive": true,
    "watch-files": "./lib/ts_test/**/*.js"
  }
}
